<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kamal Suriyakumar</title>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/city-populations.js"></script>
</head>
<body>
    <div class="container">
        <h3>US City Population Data</h3>           
        <div class="input-append">
            <label>City: </label>
            <input type="text" id="searchCity" placeholder="Search City" onblur="SearchCity(10)" />
            <button type="button" class="btn btn-primary" id="btnGo" onclick="SearchCity(10);">Submit</button>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Zip
                    </th>
                    <th>
                        Population
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
        <div class="input-append">
            <label>Display record count: </label>
            <button type="button" class="btn btn-primary" id="btnGo" onclick="SearchCity(10);">10</button>
            <button type="button" class="btn btn-primary" id="btnGo" onclick="SearchCity(25);">25</button>
            <button type="button" class="btn btn-primary" id="btnGo" onclick="SearchCity(50);">50</button>
            <button type="button" class="btn btn-primary" id="btnGo" onclick="SearchCity(-1);">All</button>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Details Page</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" placeholder="city" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="state">State</label>
                            <input type="text" class="form-control" id="state" placeholder="state" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="_id">Zip</label>
                            <input type="text" class="form-control" id="_id" placeholder="_id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="pop">Population</label>
                            <input type="text" class="form-control" id="pop" placeholder="pop" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
